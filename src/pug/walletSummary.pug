section.wallet-s
  .title__wrapper
    h2.title Wallet Summary
    img(src="./assets/images/wallet-summary/icons/arrow.svg", alt="to wallet summary").title__link
  .wallet-s__balance
    each item in walletSummary.balance
      +walletSummaryItems(item.title, item.value, item.icon)
  .wallet-s__details
    each item in walletSummary.details 
      +walletSummaryItems(item.title, item.value, item.icon)